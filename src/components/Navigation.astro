---
import '../styles/style.css';

const links = [
  { text: "Colegio", href: "/colegio" },
  { text: "Formación", href: "/formacion" },
  { text: "Bienestar", href: "/bienestar" },
  { text: "Comunidad", href: "/comunidad" },
  { text: "Comunicaciones", href: "/comunicaciones" },
  { text: "Circulares", href: "/circulares" },
  { text: "Contáctenos", href: "/contacto" },
];

// Importamos los estilos de la transición
import { fade } from 'astro:transitions';
---

<header class="fixed w-full bg-white/95 backdrop-blur-sm z-50 shadow-sm">
  <nav class="relative w-full bg-gradient-to-r from-[#d6f1ec] to-[#d6f1ec] px-4 py-4 shadow-md">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-x-2">
        <img src="/C.Paula_Montal.png" height="80" width="80" alt="Logo del colegio Paula Montal" />
        <a href="/" class="text-2xl font-bold text-monte-carlo-600">
          Paula Montal
        </a>
      </div>     
      
      <div class="hidden md:flex space-x-6">
        {
          links.map((link) => (
            <a
              href={link.href}
              class="relative text-monte-carlo-900 hover:text-monte-carlo-500 group transition-colors duration-300 font-bold"
              transition:animate={fade({ duration: '0.5s' })}
            >
              {link.text}
              <span class="absolute left-0 -bottom-1 w-0 h-0.5 bg-monte-carlo-500 transition-all duration-300 group-hover:w-full"></span>
              <span class="absolute left-0 -top-1 w-0 h-0.5 bg-monte-carlo-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
          ))
        }
      </div>

      <button class="md:hidden text-monte-carlo-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
</header>
